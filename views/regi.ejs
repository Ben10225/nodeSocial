<!DOCTYPE html>
<html lang="zh-TW">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Stay Message</title>

  <link rel="stylesheet" href="/css/regi.css">
</head>
<body>
  <div class="regipage">
    <div class="regibox">
      <div class="signin">
        <h1 class="title1">登&emsp;入</h1>
        <form action="" class="s1">
          <label for="">信箱</label>
          <input type="email" name="email" size="23" autocomplete="off"><br>
          <label for="">密碼</label>
          <input type="password" name="password" size="23" autocomplete="off"><br>
          <button>確 認</button>
        </form>
      </div>
    </div>
    <div class="stick"></div>
    <div class="regibox">
      <div class="signup">
        <h1 class="title2">註&emsp;冊</h1>
        <form action="" class="s2">
          <label for="">暱稱</label>
          <input type="text" name="name" size="23" autocomplete="off"><br>
          <label for="">信箱</label>
          <input type="email" name="email" size="23" autocomplete="off"><br>
          <label for="">密碼</label>
          <input type="password" name="password" size="23" autocomplete="off"><br>
          <button>確認</button>
        </form>
      </div>
    </div>
  </div>
  <div class="block"></div>
  <div class="wrapper">
    <div class="messageBox">
      <h2 class="listTitle">留言列表</h2>
      <% for(let i=0;i<data.length;i++){ %>
        <div class="msg">
          <div class="time">
            <span><%= data[i].date %></span>
            <span><%= data[i].time %></span>
          </div>
          <div class="userName"><%= data[i].name %> : </div>
          <div class="userMsg"><%= data[i].msg %></div>
          <hr>
        </div>
        
      <% } %>
    </div>
    <div class="userBox">
      <div class="user_inner">
        <h2>輸入留言</h2>
        <form action="/stay" method="POST">
          <div class="box">
            <label for="name">稱 呼</label>
            <input type="text" name="name" id="name" size="25" autocomplete="off"><br>
          </div>
          <div class="box">
            <label for="msg">留 言</label>
            <textarea type="text" name="msg" id="msg" rows="4" cols="20" ></textarea>
          </div>
          <button>送出留言</button>
        </form>
      </div>
    </div>
  </div>

  <script src="/js/regi.js"></script>
</body>
</html>